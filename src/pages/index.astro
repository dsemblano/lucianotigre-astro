---
import BaseLayout from '../layouts/BaseLayout.astro'
import { SITE_BASE, SocialLinks } from '../consts'
import { Icon } from 'astro-icon/components'
import BlogCard from '../components/BlogCard.astro'
import { getCollection } from 'astro:content'

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 4)
---

<BaseLayout>
	<div class="bg-hero bg-yellow-400 w-full">
		<main
			class="app-container flex flex-col gap-12 justify-center py-36 md:py-48 pt-44 md:pt-56 relative"
		>
			<section class="hero-section text-white">
				<p class="block text-3xl opacity-70 mt-9 mb-4">
					Bushcraft e sobrevivência
				</p>
				<h1 class="text-8xl font-bold leading-none">Luciano Tigre</h1>
				<p class="text-2xl max-w-2xl font-light leading-normal">
					Sobrevivência | Selva | Mar | Deserto | Gelo
				</p>
				<p class="text-2xl max-w-2xl font-light leading-normal">
					Em breve a loja de produtos!
				</p>
				<!-- <div class="flex flex-wrap gap-8">
					{
						SocialLinks.map((link) => (
							<a
								class="text-xl text-primary dark:text-primary-dark underline hover:underline underline-offset-4"
								href={link.url}
								target="_blank"
							>
								{link.name}
							</a>
						))
					}
				</div> -->
			</section>
		</main>
	</div>

	<!-- Recent Posts Section -->
	<section class="app-container">
		<h2 class="section-title">Recent Posts</h2>
		<div class="posts-grid-container">
			{posts.map((post) => <BlogCard post={post} />)}
		</div>
		<a class="btn-secondary" href={`${SITE_BASE}/blog`}
			>Read All
			<Icon size={20} name="mdi:arrow-right" />
		</a>
	</section>

	<!-- Recent Posts Section -->
	<section class="app-container py-42 grid lg:grid-cols-2 gap-28 lg:gap-10">
		<div class="space-y-6">
			<h2 class="section-title">Sobre mim</h2>
			<p class="text-lg max-w-xl pb-4">
				Luciano Tigre é apresentador do Discovery Channel e da nova temporada de
				Desafio em Dose Dupla Brasil técnicas de sobrevivência Piloto de avião,
				Professor e instrutor de sobrevivência na Selva para os Cursos de
				Comissário de bordo e Pilotos de aeronaves em Curitiba - Drakon escola
				de aviação Civil e Aeroporto do Bacacheri. Também professor de
				meteorologia aeronáutica para o curso de Pilotos de avião e helicóptero.
			</p>
			<a class="btn-secondary" href={`${SITE_BASE}/about`}
				>Leia mais
				<Icon size={20} name="mdi:arrow-right" />
			</a>
		</div>
		<div class="space-y-6">
			<h2 class="section-title">Contato cursos e eventos</h2>
			<p class="text-lg max-w-xl">
				Use the buttons below for my resume & email.
			</p>
			<div class="flex flex-wrap mt-auto space-x-4">
				<a
					class="btn-primary"
					href="mailto:example@email.com"
					download
					target="_blank"
					>Get in touch
					<Icon height={20} name="mdi:email" />
				</a>
				<a class="btn-secondary" href="https://example.com" target="_blank"
					>Download Resume
					<Icon height={20} name="mdi:arrow-collapse-down" />
				</a>
			</div>
		</div>
	</section>
</BaseLayout>
